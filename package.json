  "main": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "package.json"
  ],
  "scripts": {
    "start": "nodemon",
    "test": "jest",
    "pub": "yarn build:all && yarn publish dist --no-git-tag-version",
    "pub:major": "yarn pub --major",
    "pub:minor": "yarn pub --minor",
    "pub:patch": "yarn pub --patch",
    "postversion": "shx cp package.json ../..",
    "build": "yarn clean && tsc --project tsconfig.build.json && shx cp package.json dist/src",
    "clean": "shx rm -rf dist"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.21",
    "babel-jest": "^27.4.6",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "shx": "^0.3.4",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.4"
  }
}
